+<?php
+
+namespace Drupal\paragraphs\Event;
+
+use Drupal\Component\EventDispatcher\Event;
+use Drupal\paragraphs\ParagraphInterface;
+
+/**
+ * Class ParagraphSummaryAlterEvent.
+ *
+ * Contains the event for paragraph summary alteration.
+ */
+class ParagraphSummaryAlterEvent extends Event {
+
+    /**
+     * The given paragraph.
+     *
+     * @var \Drupal\paragraphs\ParagraphInterface
+     */
+    protected $paragraph;
+
+    /**
+     * Paragraph's summary.
+     *
+     * @var array
+     */
+    protected $summary;
+
+  /**
+   * ParagraphSummaryAlterEvent class constructor.
+   *
+   * @param \Drupal\paragraphs\ParagraphInterface $paragraph
+   *   The given paragraph.
+   * @param array $summary
+   *   The summary.
+   */
+    public function __construct(ParagraphInterface $paragraph, array $summary) {
+        $this->paragraph = $paragraph;
+        $this->summary = $summary;
+    }
+
+  /**
+   * Gets the paragraph object.
+   *
+   * @return \Drupal\paragraphs\ParagraphInterface
+   *   The paragraph to be summarized.
+   */
+  public function getParagraph() {
+    return $this->paragraph;
+  }
+
+  /**
+   * Gets the summary array.
+   *
+   * @return array
+   *   The summary.
+   */
+  public function getSummary() {
+    return $this->summary;
+  }
+
+  /**
+   * Append string to the summary array.
+   */
+  public function appendTextToSummary($text, $type = 'content') {
+    if (!empty($this->summary[$type])) {
+      array_push($this->summary[$type], $text);
+    }
+  }
+
+  /**
+   * Prepend string to the summary array.
+   */
+  public function prependTextToSummary($text, $type = 'content') {
+    if (!empty($this->summary[$type])) {
+      array_unshift($this->summary[$type], $text);
+    }
+  }
+
+  /**
+   * Set new summary.
+   */
+  public function setSummary(array $summary) {
+    $this->summary = $summary;
+  }
+
+}
