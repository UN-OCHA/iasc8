+<?php
+
+namespace Drupal\paragraphs\Event;
+
+use Drupal\Component\EventDispatcher\Event;
+use Drupal\paragraphs\ParagraphInterface;
+
+/**
+ * Class ParagraphSummaryExcludeFieldsEvent.
+ *
+ * Contains the event for paragraph summary alteration.
+ */
+class ParagraphSummaryExcludeFieldsEvent extends Event {
+
+  /**
+   * The given paragraph.
+   *
+   * @var \Drupal\paragraphs\ParagraphInterface
+   */
+  protected $paragraph;
+
+  /**
+   * The list of fields to exclude.
+   *
+   * @var array
+   */
+  protected $fields = [];
+
+  /**
+   * ParagraphSummaryExcludeFieldsEvent class constructor.
+   *
+   * @param \Drupal\paragraphs\ParagraphInterface $paragraph
+   *   The given paragraph.
+   */
+  public function __construct(ParagraphInterface $paragraph) {
+    $this->paragraph = $paragraph;
+  }
+
+  /**
+   * Gets the paragraph object.
+   *
+   * @return \Drupal\paragraphs\ParagraphInterface
+   *   The paragraph to be summarized.
+   */
+  public function getParagraph() {
+    return $this->paragraph;
+  }
+
+  /**
+   * Gets the excluded fields array.
+   *
+   * @return array
+   *   The array of excluded field names.
+   */
+  public function getExcludedFields() {
+    return $this->fields;
+  }
+
+  /**
+   * Append field names to exclude array.
+   */
+  public function excludeFields(array $fields_to_exclude) {
+    $this->fields = array_merge($this->fields, $fields_to_exclude);
+  }
+
+}
